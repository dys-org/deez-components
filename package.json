{
  "name": "deez-components",
  "version": "0.3.22",
  "author": "David Soards",
  "license": "ISC",
  "description": "If I had components under my chin would those be chin components?",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/deez-components.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/deez-components.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dys-org/deez-components"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p build:types build-only",
    "build:types": "vue-tsc --project tsconfig.build-types.json --declaration --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.build-types.json --composite false",
    "lint": "eslint . --ext .vue,.js,.cjs,.ts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "test": "echo \"No test specified\"",
    "prepublishOnly": "pnpm build",
    "prepare": "pnpm test",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "@headlessui/vue": "^1.7.16",
    "@tailwindcss/forms": "^0.5.7",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.0",
    "vue": "~3.4.12",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.17",
    "@histoire/plugin-vue": "^0.17.6",
    "@iconify/json": "^2.2.168",
    "@rushstack/eslint-patch": "^1.6.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.20.1",
    "histoire": "^0.17.6",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "prettier": "^3.2.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "simple-git-hooks": "^2.9.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.2.2",
    "unplugin-icons": "^0.18.2",
    "vite": "^4.5.1",
    "vitest": "^1.2.0",
    "vue": "~3.4.12",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,js,cjs}": [
      "prettier --list-different",
      "eslint"
    ]
  }
}
