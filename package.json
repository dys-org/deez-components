{
  "name": "deez-components",
  "version": "0.5.2",
  "author": "David Soards",
  "license": "ISC",
  "description": "If I had components under my chin would those be chin components?",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/deez-components.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/deez-components.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dys-org/deez-components"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p build:types build-only",
    "build:types": "vue-tsc --project tsconfig.build-types.json --declaration --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.build-types.json --composite false",
    "lint": "eslint . --ext .vue,.js,.cjs,.ts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "test": "echo \"No test specified\"",
    "prepublishOnly": "pnpm build",
    "prepare": "pnpm test",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "@egoist/tailwindcss-icons": "^1.7.4",
    "@headlessui/vue": "1.7.21",
    "@iconify/json": "^2.2.204",
    "@tailwindcss/forms": "^0.5.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "vue": "~3.4.25",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@egoist/tailwindcss-icons": "^1.8.0",
    "@headlessui/vue": "^1.7.22",
    "@histoire/plugin-vue": "^0.17.17",
    "@iconify/json": "^2.2.213",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tailwindcss/forms": "^0.5.7",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.12",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.26.0",
    "histoire": "^0.17.17",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "simple-git-hooks": "^2.11.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.5",
    "vite": "^4.5.3",
    "vitest": "^1.6.0",
    "vue": "~3.4.27",
    "vue-router": "^4.3.2",
    "vue-tsc": "^1.8.27"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,js,cjs}": [
      "prettier --list-different",
      "eslint"
    ]
  }
}
