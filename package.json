{
  "name": "deez-components",
  "version": "0.1.1",
  "author": "David Soards",
  "license": "ISC",
  "description": "If I had components under my chin would those be chin components?",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/deez-components.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/deez-components.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p build:types build-only",
    "build:types": "vue-tsc --project tsconfig.build-types.json --declaration --emitDeclarationOnly --outDir dist/types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.cjs,.ts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "prepublish": "npm run build"
  },
  "peerDependencies": {
    "@headlessui/vue": "^1.7.14",
    "@tailwindcss/forms": "^0.5.3",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.14",
    "@histoire/plugin-vue": "^0.16.1",
    "@iconify/json": "^2.2.80",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tsconfig/node18": "^2.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.18",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.42.0",
    "eslint-plugin-vue": "^9.14.1",
    "histoire": "^0.16.2",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.0.4",
    "unplugin-icons": "^0.16.3",
    "vite": "^4.3.9",
    "vitest": "^0.31.4",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,js,cjs}": [
      "prettier --list-different",
      "eslint"
    ]
  }
}
