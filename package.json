{
  "name": "deez-components",
  "version": "0.7.0",
  "author": "David Soards",
  "license": "ISC",
  "description": "If I had components under my chin would those be chin components?",
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/deez-components.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/deez-components.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dys-org/deez-components"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.build-types.json --composite false",
    "lint": "eslint . --ext .vue,.js,.cjs,.ts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "test": "echo \"No test specified\"",
    "prepublishOnly": "pnpm build",
    "prepare": "pnpm test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@egoist/tailwindcss-icons": "^1.8.1",
    "@headlessui/vue": "~1.7.22",
    "@iconify-json/lucide": "^1.1.207",
    "@tailwindcss/forms": "^0.5.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "radix-vue": "^1.9.4",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "^0.17.17",
    "@rushstack/eslint-patch": "^1.10.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.16.1",
    "@types/web-bluetooth": "^0.0.20",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "histoire": "^0.17.17",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.10",
    "typescript": "~5.4.5",
    "vite": "^4.5.3",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^1.6.0",
    "vue": "~3.4.38",
    "vue-router": "^4.4.3",
    "vue-tsc": "^2.0.29"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.10",
    "vue": "~3.4.38",
    "vue-router": "^4.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm dlx lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,js,cjs}": [
      "prettier --list-different",
      "eslint"
    ]
  }
}
